{
  "name": "cfgfunctionsgeneratorarma3",
  "displayName": "CfgFunctions & CfgRemoteExec Generator (Arma 3)",
  "description": "Adds an editor button for automatic (re)generation of custom CfgFunctions and CfgRemoteExec for Arma 3.",
  "icon": "logo/icon.png",
  "version": "1.5.1",
  "publisher": "Ezcoo",
  "license": "SEE LICENSE IN LICENSE",
  "engines": {
    "vscode": "^1.80.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Ezcoo/CfgFunctionsGenerator-Arma3.git"
  },
  "categories": [
    "Formatters",
    "Other"
  ],
  "keywords": [
    "Arma",
    "Arma3",
    "SQF",
    "CfgFunctions",
    "CfgFunctions.hpp",
    "CfgRemoteExec",
    "CfgRemoteExec.hpp",
    "Remote Execution",
    "Remote Exec"
  ],
  "activationEvents": [
    "onLanguage:hpp",
    "onLanguage:sqf",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cfgfunctions.generateCfgFunctions",
        "title": "Generate CfgFunctions (Arma 3)",
        "icon": "$(refresh)"
      },
      {
        "command": "cfgfunctions.generateCfgRemoteExec",
        "title": "Generate CfgRemoteExec template (Arma 3)",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "cfgfunctions.generateCfgFunctions",
          "group": "navigation",
          "when": "resourceFilename == CfgFunctions.hpp",
          "icon": "$(refresh)"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "CfgFunctions Generator (Arma 3) Settings",
      "properties": {
        "cfgfunctionsTag": {
          "type": "string",
          "default": "YOUR_TAG_HERE",
          "description": "Specifies your personal tag to prevent duplicate functions, e.g. in projects with dependencies."
        },
        "debugEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Allow debug flag to be set in CfgFunctions.hpp (useful for development)."
        },
        "pboPrefix": {
          "type": "string",
          "default": "",
          "description": "Define PBO prefix (necessary if developing an addon)."
        },
        "allowRemoteExec": {
          "type": "boolean",
          "default": true,
          "description": "Allow unrestrained remote execution (useful during development)."
        }
      }
    },
    "languages": [{
      "id": "sqf",
      "extensions": [".sqf"],
      "aliases": ["SQF","sqf"]
    }]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/find-parent-dir": "^0.3.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.4.1",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "esbuild": "^0.18.20",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0"
  },
  "dependencies": {
    "fast-glob": "^3.2.12",
    "file-uri-to-path": "^2.0.0",
    "find-parent-dir": "^0.3.1",
    "find-up": "^6.3.0",
    "typescript": "^5.1.3"
  }
}
